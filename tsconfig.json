{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ES2015",
      "ES2015.Promise",
      "ES2015.Core",
      "ES2015.Collection",
      "ES2015.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/components/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@context/*": ["src/context/*"],
      "@types/*": ["src/types/*"],
      "@assets/*": ["src/assets/*"]
    },

    /* Type Checking */
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,

    /* Additional Checks */
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "./.tsbuildinfo",

    /* Source Maps */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Module Features */
    "preserveSymlinks": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src",
    "scripts",
    "vite.config.ts",
    ".eslintrc.json",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".git",
    "public"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
